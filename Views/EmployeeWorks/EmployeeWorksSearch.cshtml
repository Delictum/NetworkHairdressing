@model IEnumerable<NetworkHairdressing.Models.EmployeeWork>
@{
    ViewBag.Title = "EmployeeWorks";
}

<h2>Employees work:</h2>

@if (!Model.Any())
{
    <h4>The hairdresser has no work yet.</h4>
}
else
{
    <div class="alert alert-success">
        <a href="/Employees/EmployeeWorksSearch/@Model.First().EmployeeId">Author</a>
    </div>
        <div id="searchresults">
            <ul>
                @foreach (var item in Model)
                {
                    <li>



                        @{
                            var base64 = Convert.ToBase64String(item.Image);
                            var imgSrc = $"data:image/gif;base64,{base64}";
                        }
                        <br />
                        <img src="@imgSrc" alt="" />

                    </li>
                }
            </ul>
        </div>
        }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
